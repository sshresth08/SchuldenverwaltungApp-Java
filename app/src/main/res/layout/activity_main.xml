<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/Name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudin"
            android:checked="true"/>


        <RadioButton
            android:id="@+id/Name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tunc" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/neuVerliehen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Neu Verliehen:"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/verleihungsbetrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Geldbetrag eingeben!"
            android:inputType="number"
            android:minHeight="48dp"
            android:text="" />
    </LinearLayout>

    <Button
        android:id="@+id/abspeichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="displayToast1"
        android:text="Abspeichern" />

    <TextView
        android:id="@+id/Name1Schulden"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Sudin:" />

    <TextView
        android:id="@+id/Name2Schulden"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Tunc:" />

    <TextView
        android:id="@+id/gesamtSchulden"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Gesammte Schulden:" />

    <Button
        android:id="@+id/rueckzahlung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RÃ¼ckzahlung"
        android:onClick="displayToast2"
        android:textAllCaps="true" />

</LinearLayout>